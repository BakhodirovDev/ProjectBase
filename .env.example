# ============================================
# ProjectBase - Environment Variables
# ============================================
# üí° SMART DEFAULTS:
#   - Bo'sh qoldirsangiz = ichki Docker konteyner ishlatiladi
#   - Qiymat yozsangiz = tashqi servis ishlatiladi
# ============================================

POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=projectbase
POSTGRES_USER=postgres

# ‚ö†Ô∏è MUHIM: Kuchli parol ishlating!
# Generate: openssl rand -base64 32
POSTGRES_PASSWORD=

REDIS_HOST=
REDIS_PORT=6379

# ‚ö†Ô∏è Production da parol majburiy!
# Generate: openssl rand -base64 32
REDIS_PASSWORD=

# Memory management
REDIS_MAXMEMORY=256mb

# ‚ö†Ô∏è JUDA MUHIM: Kamida 32 belgidan iborat bo'lishi kerak!
# Generate: openssl rand -base64 64
JWT_SECRET_KEY=
JWT_REFRESH_TOKEN_SECRET_KEY=
# Token settings
JWT_ISSUER=api.projectbase.com
JWT_AUDIENCE=api.projectbase.com
JWT_EXPIRES_MINUTES=60
JWT_REFRESH_EXPIRES_DAYS=7

ASPNETCORE_ENVIRONMENT=Production
API_PORT=5000

# Seed data (faqat development/testing)
SEED_ENABLED=false

# Requests per window
RATE_LIMIT=100
# Window in minutes
RATE_WINDOW=1
# Queue limit for rate limiter
RATE_QUEUE_LIMIT=10

# API server URL
API_URL=http://0.0.0.0:5000

# ===========================================
# SWAGGER SETTINGS
# ===========================================
SWAGGER_ENABLED=true
SWAGGER_TITLE=ProjectBase API
SWAGGER_VERSION=v1
SWAGGER_DESCRIPTION=ProjectBase Web API Documentation
SWAGGER_ROUTE_PREFIX=swagger
SWAGGER_CONTACT_NAME=Your Name
SWAGGER_CONTACT_EMAIL=your.email@example.com
SWAGGER_CONTACT_URL=https://example.uz
SWAGGER_PRODUCTION_URL=
SWAGGER_STAGING_URL=
SWAGGER_ALLOWED_IPS=127.0.0.1,::1

# ===========================================
# SERILOG SETTINGS
# ===========================================
SERILOG_MINIMUM_LEVEL=Information
SERILOG_CONSOLE_ENABLED=true
SERILOG_FILE_ENABLED=true
SERILOG_FILE_PATH=logs/log-.txt
SERILOG_FILE_ROLLING_INTERVAL=Day
SERILOG_FILE_RETAINED_LIMIT=30

# ===========================================
# CORS SETTINGS
# ===========================================
CORS_PRODUCTION_ORIGINS=https://example.uz,https://www.example.uz,https://admin.example.uz
CORS_PRODUCTION_METHODS=GET,POST,PUT,DELETE,PATCH
CORS_PRODUCTION_HEADERS=Content-Type,Authorization
CORS_PRODUCTION_EXPOSED_HEADERS=Content-Disposition,X-Pagination
CORS_PRODUCTION_ALLOW_CREDENTIALS=true
CORS_PRODUCTION_ALLOW_ANY_ORIGIN=false
CORS_DEVELOPMENT_ORIGINS=
CORS_DEVELOPMENT_METHODS=
CORS_DEVELOPMENT_HEADERS=
CORS_DEVELOPMENT_EXPOSED_HEADERS=Content-Disposition,X-Pagination
CORS_DEVELOPMENT_ALLOW_CREDENTIALS=false
CORS_DEVELOPMENT_ALLOW_ANY_ORIGIN=true
CORS_LOCALHOST_ORIGINS=http://localhost:3000,http://localhost:5000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5000,http://127.0.0.1:5173
CORS_LOCALHOST_METHODS=
CORS_LOCALHOST_HEADERS=
CORS_LOCALHOST_EXPOSED_HEADERS=Content-Disposition,X-Pagination
CORS_LOCALHOST_ALLOW_CREDENTIALS=true
CORS_LOCALHOST_ALLOW_ANY_ORIGIN=false

# ===========================================
# SECURITY HEADERS
# ===========================================
# Content Security Policy
CSP_ENABLED=true
CSP_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'"

# HSTS (HTTP Strict Transport Security)
HSTS_ENABLED=true
HSTS_MAX_AGE=31536000